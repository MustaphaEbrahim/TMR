<resources>
    <!--
        &lt;!&ndash; Base application theme. &ndash;&gt;
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            &lt;!&ndash; Customize your theme here. &ndash;&gt;
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <!-- <item name="android:fontFamily">@font/cairo_semibold</item>-->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="toolbar_theme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>

    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="anything">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="buttonTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <!--<item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorGray</item>-->

    </style>

    <style name="MyFloatingsave" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="toolbar_theme2" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="ThemeOverlay.MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <!--<item name="android:background">@drawable/horizontalline</item>-->
    </style>


    <style name="BlueTextStyle">
        <item name="android:textColor">@color/colorAccent2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="SmallTextViewStyle" parent="@style/BlueTextStyle">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <style name="buttonThemesecondary" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">#3B5998</item>

    </style>

    <style name="buttonprimary" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>

    </style>

    <style name="BaseButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialAlertDialog
        </item>
    </style>

    <style name="AccentBaseButtonStyle" parent="@style/BaseButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="primaryColoredButtonStyle" parent="@style/BaseButtonStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="collapse_toolbar_txt_color">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="AccentColoredButtonStyle" parent="@style/AccentBaseButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
    </style>

    <style name="primaryColoredStyle" parent="@style/primaryColoredButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <style name="AccentColoredLargeButtonStyle" parent="@style/AccentBaseButtonStyle">
        <item name="android:layout_height">@dimen/btn_big_height</item>
    </style>

    <style name="AccentColoredFillButtonStyle" parent="@style/AccentColoredLargeButtonStyle">
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="SmallButtonStyle" parent="@style/BaseButtonStyle">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="OutlinedButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/btn_small_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginTop">@dimen/xxlarge_margin</item>
        <item name="android:textAppearance">@style/PrimaryBMediumTextViewStyle</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="PrimaryBMediumTextViewStyle" parent="@style/PrimaryTextStyle">
        <item name="android:fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>



</resources>
